<h2>My posts list</h2><br>
<% if @posts.any? %>
  <table class="border_bottom">
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td width="500"><%= post.title.truncate(60) %></td>
      <td><%= link_to 'Show', post_path(post), class: "btn btn-default btn-sm" %></td>
      <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-default btn-sm" %></td>
      <td><%= link_to 'Destroy', "#{post_path(post)}/delete", class: "btn btn-danger btn-sm" %></td>
    </tr>
  <% end %>
  </table>
<% else %>
  <p>You have not posted any post yet :(</p>
<% end %>