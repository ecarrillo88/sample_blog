<div class="row">
  <div class="col-xs-9">
    <h3>User Profile</h3>
    <p><b>Name:</b> <%= @user.name %></p>
    <p><b>Email:</b> <%= @user.email %></p>
    <div class="btn-group">
      <%= link_to 'Edit my account', edit_user_path(@user.id), method: :get, class: "btn btn-primary" %>
      <%= button_to 'Delete my account', @user, method: :delete, class: "btn btn-danger" %>
      </div>
  </div>
</div>
